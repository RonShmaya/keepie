<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="25dp"
                android:text="Admin"
                android:textColor="#555B6E"
                android:textSize="19sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:background="#6CA19C9C" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dialogAdmin_TIL_IP"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaa_bold"
                app:errorEnabled="true"
                android:hint="IP"
                android:textColorHint="#555B6E"
                app:boxStrokeColor="#555B6E"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="40"
                app:hintTextColor="#555B6E">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dialogAdmin_TIETL_IP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="30"
                    android:fontFamily="@font/comfortaa_bold"
                    android:imeOptions="actionDone"
                    android:maxLength="40"
                    android:outlineAmbientShadowColor="#555B6E"
                    android:shadowColor="#555B6E"
                    android:textColor="#555B6E" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dialogAdmin_TIL_PORT"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaa_bold"
                app:errorEnabled="true"
                android:hint="PORT"
                android:textColorHint="#555B6E"
                app:boxStrokeColor="#555B6E"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="3"
                app:hintTextColor="#555B6E">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dialogAdmin_TIETL_PORT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="30"
                    android:fontFamily="@font/comfortaa_bold"
                    android:imeOptions="actionDone"
                    android:maxLength="3"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:outlineAmbientShadowColor="#555B6E"
                    android:shadowColor="#555B6E"
                    android:textColor="#555B6E" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialogAdmin_BTN_create"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/comfortaa_bold"
                android:backgroundTint="#555B6E"
                android:text="Create"
                app:checkedIconTint="@color/white"
                android:textColor="#FAF9F9"
                android:textSize="15sp"
                app:cornerRadius="20dp" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>