<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Register_activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9e17f"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/lottie_lock"
            app:lottie_speed="0.8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#F9EAAA"
            android:gravity="center"
            android:orientation="vertical">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:text="Create Adult Account"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:padding="15dp"
                android:text="In this account you will able to get notifications In case there is a suspicious correspondence with your adolescent on WhatsUp."
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/connect_BTN_reg_adult"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#6B6060"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Register"
                android:textColor="#F9EAAA"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#F9EAAA"
            android:gravity="center"
            android:orientation="vertical">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:text="Create Adolescent Account"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:padding="15dp"
                android:text="In this account In case there is a suspicious correspondence on WhatsUp Your responsible party you approved will get notification."
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/connect_BTN_reg_adolescent"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#6B6060"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Register"
                android:textColor="#F9EAAA"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>