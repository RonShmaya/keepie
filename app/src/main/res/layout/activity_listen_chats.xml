<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ListenChatsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9e17f">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f9e17f"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="175dp"
                android:layout_height="175dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/lottie_lock"
                app:lottie_speed="0.8" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded"
                android:backgroundTint="#F9EAAA"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:padding="10dp"
                    android:text="make a chat search:"
                    android:textColor="#6B6060"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded"
                android:backgroundTint="#F9EAAA"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:padding="10dp"
                    android:text="+972 - "
                    android:textColor="#6B6060"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_TIETL_phone1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/rounded"
                    android:backgroundTint="#F9EAAA"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center_vertical"
                    android:hint="without zero"
                    android:imeOptions="actionDone"
                    android:maxHeight="100dp"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#5B5252"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded"
                android:backgroundTint="#F9EAAA"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:padding="10dp"
                    android:text="+972 - "
                    android:textColor="#6B6060"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_TIETL_phone2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/rounded"
                    android:backgroundTint="#F9EAAA"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center_vertical"
                    android:hint="without zero"
                    android:imeOptions="actionDone"
                    android:maxHeight="100dp"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#5B5252"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded"
                android:backgroundTint="#F9EAAA"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_TIETL_keywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="#F9EAAA"
                    android:fontFamily="@font/helvetica"
                    android:gravity="center_vertical"
                    android:hint="Add Keyword"
                    android:imeOptions="actionDone"
                    android:maxHeight="100dp"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#5B5252"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded"
                android:backgroundTint="#f9e17f"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/search_BTN_add_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="#27A2A1"
                    app:elevation="0dp"
                    android:backgroundTint="#386969"
                    android:src="@android:drawable/ic_input_add" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/search_LBL_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:padding="20dp"
                    android:text=""
                    android:textColor="#6B6060"
                    android:textSize="20sp" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/search_BTN_submit"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#6B6060"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Search"
                android:textColor="#F9EAAA"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_LST"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginBottom="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>